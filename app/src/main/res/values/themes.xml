<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TiktokVideoDownloader" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="CustomText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="autoSizeMaxTextSize">17sp</item>
        <item name="autoSizeMinTextSize">13sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ContainersColor">
        <item name="android:background">#CECCCBCB</item>

    </style>

    <style name="Theme.TiktokVideoDownloader" parent="Base.Theme.TiktokVideoDownloader" />
</resources>